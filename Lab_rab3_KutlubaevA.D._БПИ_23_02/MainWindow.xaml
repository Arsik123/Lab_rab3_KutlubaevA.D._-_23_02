<Window x:Class="Lab_rab3_KutlubaevA.D._БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ответ:" Height="Auto" MinWidth="510" MaxWidth="510"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">

    <Window.Background>
        <DynamicResource ResourceKey="WindowBackground"/>
    </Window.Background>

    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="6">
            <Button Content="Переключить тему" Click="ThemeToggle_Click" Padding="6,2" Margin="4"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="10">

                <RadioButton Style="{DynamicResource FormulaRadioButtonStyle}" IsChecked="True" Name="Radio1" GroupName="formula" Checked="Radio_Checked">
                    <StackPanel>
                        <Image Source="Images/1.png" Height="30" Margin="5" HorizontalAlignment="Center"/>
                        <GroupBox Header="Параметры" Style="{DynamicResource FormulaGroupBoxStyle}" x:Name="R1Group">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Content="a" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0,00" Style="{DynamicResource InputTextBoxStyle}" x:Name="R1TextA"/>
                                <Label Content="f" Style="{DynamicResource InputLabelStyle}"/>
                                <ComboBox Style="{DynamicResource InputComboBoxStyle}" MinWidth="60" x:Name="R1ComboF" SelectedIndex="0">
                                    <ComboBoxItem Content="4"/>
                                    <ComboBoxItem Content="5"/>
                                    <ComboBoxItem Content="6"/>
                                    <ComboBoxItem Content="7"/>
                                    <ComboBoxItem Content="8"/>
                                    <ComboBoxItem Content="9"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{DynamicResource FormulaRadioButtonStyle}" Name="Radio2" GroupName="formula" Checked="Radio_Checked">
                    <StackPanel>
                        <Image Source="Images/2.png" Height="30" Margin="5" HorizontalAlignment="Center"/>
                        <GroupBox Header="Параметры" Style="{DynamicResource FormulaGroupBoxStyle}" Name="R2Group">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Content="a" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0,00" Style="{DynamicResource InputTextBoxStyle}" Name="R2TextA"/>
                                <Label Content="b" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0,00" Style="{DynamicResource InputTextBoxStyle}" Name="R2TextB"/>
                                <Label Content="f" Style="{DynamicResource InputLabelStyle}"/>
                                <ComboBox Style="{DynamicResource InputComboBoxStyle}" MinWidth="100" Name="R2ComboF" SelectedIndex="0">
                                    <ComboBoxItem>10</ComboBoxItem>
                                    <ComboBoxItem>20</ComboBoxItem>
                                    <ComboBoxItem>30</ComboBoxItem>
                                    <ComboBoxItem>40</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{DynamicResource FormulaRadioButtonStyle}" Name="Radio3" GroupName="formula" Checked="Radio_Checked">
                    <StackPanel>
                        <Image Source="Images/3.png" Height="30" Margin="5" HorizontalAlignment="Center"/>
                        <GroupBox Header="Параметры" Style="{DynamicResource FormulaGroupBoxStyle}" Name="R3Group">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Content="a" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0,00" Style="{DynamicResource InputTextBoxStyle}" Name="R3TextA"/>
                                <Label Content="b" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0,00" Style="{DynamicResource InputTextBoxStyle}" Name="R3TextB"/>
                                <Label Content="c" Style="{DynamicResource InputLabelStyle}"/>
                                <ComboBox Style="{DynamicResource InputComboBoxStyle}" MinWidth="50" SelectedIndex="0" Name="R3ComboC">
                                    <ComboBoxItem>0</ComboBoxItem>
                                    <ComboBoxItem>1</ComboBoxItem>
                                </ComboBox>
                                <Label Content="d" Style="{DynamicResource InputLabelStyle}"/>
                                <ComboBox Style="{DynamicResource InputComboBoxStyle}" MinWidth="70" SelectedIndex="0" Name="R3ComboD">
                                    <ComboBoxItem>-1</ComboBoxItem>
                                    <ComboBoxItem>0</ComboBoxItem>
                                    <ComboBoxItem>1</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{DynamicResource FormulaRadioButtonStyle}" Name="Radio4" GroupName="formula" Checked="Radio_Checked">
                    <StackPanel>
                        <Image Source="Images/4.png" Height="50" Margin="5" HorizontalAlignment="Center"/>
                        <GroupBox Header="Параметры" Style="{DynamicResource FormulaGroupBoxStyle}" Name="R4Group">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Content="c" Style="{DynamicResource InputLabelStyle}"/>
                                <ComboBox Style="{DynamicResource InputComboBoxStyle}" MinWidth="70" Name="R4ComboC" SelectedIndex="0">
                                    <ComboBoxItem>0</ComboBoxItem>
                                    <ComboBoxItem>1</ComboBoxItem>
                                    <ComboBoxItem>2</ComboBoxItem>
                                    <ComboBoxItem>3</ComboBoxItem>
                                    <ComboBoxItem>4</ComboBoxItem>
                                    <ComboBoxItem>5</ComboBoxItem>
                                </ComboBox>
                                <Label Content="d" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0" Style="{DynamicResource InputTextBoxStyle}" Width="70" Name="R4TextD"/>
                                <Label Content="a" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Text="0,00" Style="{DynamicResource InputTextBoxStyle}" Width="70" Name="R4TextA"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{DynamicResource FormulaRadioButtonStyle}" Name="Radio5" GroupName="formula" Checked="Radio_Checked">
                    <StackPanel>
                        <Image Source="Images/var4.png" Height="60" Margin="5" HorizontalAlignment="Center"/>
                        <GroupBox Header="Параметры" Style="{DynamicResource FormulaGroupBoxStyle}" Name="R5Group">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Content="N" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Name="R5TextN" Text="1" Style="{DynamicResource InputTextBoxStyle}" MinWidth="50"/>
                                <Label Content="K" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Name="R5TextK" Text="1" Style="{DynamicResource InputTextBoxStyle}" MinWidth="50"/>
                                <Label Content="x" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Name="R5TextX" Text="0,00" Style="{DynamicResource InputTextBoxStyle}" MinWidth="50"/>
                                <Label Content="f" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Name="R5TextF" Text="0,00" Style="{DynamicResource InputTextBoxStyle}" MinWidth="50"/>
                                <Label Content="y" Style="{DynamicResource InputLabelStyle}"/>
                                <TextBox Name="R5TextY" Text="0,00" Style="{DynamicResource InputTextBoxStyle}" MinWidth="50"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <Button Content="Считать" Style="{DynamicResource CalculateButtonStyle}" Click="Calc_Click"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
